.history_container .tag_container .tag_container_title {
  display: flex;
  justify-content: space-between;
  padding: 10px 20px;
  margin-bottom: 10px;
}
.history_container .tag_container .tag_container_title .history {
  color: #f07373;
}
.history_container .tag_container .tag_container_title .clear {
  color: #30b33a;
  font-weight: bold;
}
.history_container .tag_container .tag_container_list {
  display: flex;
  flex-wrap: wrap;
  align-items: baseline;
  padding: 0 10px;
}
.history_container .tag_container .tag_container_list van-tag {
  margin: 10px;
}
.history_container .tag_container .tag_container_list van-tag .van-tag {
  padding: 8px 16px;
}
.history_container .card_container .card_item {
  margin: 10px 0 20px 0;
  padding: 0 10px;
}
.history_container .card_container .card_item_title_container {
  position: relative;
  padding-right: 30px;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  font-size: 16px;
  height: 24px;
  line-height: 24px;
  font-weight: bold;
}
.history_container .card_container .card_item_title_container like van-icon {
  right: 10px;
}

