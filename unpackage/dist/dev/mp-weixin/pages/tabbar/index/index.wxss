page {
  height: 100%;
  width: 100%;
  display: flex;
}
.home {
  flex: 1;
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 100%;
}
.home .tab-class {
  flex-basis: auto;
}
.home .tabs_container {
  display: flex;
  flex: 1;
  margin-bottom: 10px;
  height: calc(100% - 45px);
}
.home .tabs_container .van-tabs__content {
  padding-top: 20px;
}
.home .tabs_container .van-tabs__content .van-sticky {
  padding: 0 10px;
}
.home .tabs_container .tab_bar {
  width: 100%;
}
.home .tabs_container .tab_bar van-tab {
  height: calc(100vh - 110px);
  overflow: hidden;
}
.home .tabs_container .tab_bar van-tab > view {
  height: 100% !important;
}
.home .tabs_container .tab_bar .nav-class {
  padding: 0 10px;
}
.home .tabs_container .tab_bar .card_item .right_content {
  background-color: #f66;
}
.home .tabs_container .tab_bar .card_item .card_item_title {
  position: relative;
  padding-right: 30px;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  line-height: 24px;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  font-size: 16px;
}
.home .tabs_container .tab_setting_icon {
  flex: 1;
  padding: 0 10px;
  font-size: 24px;
}
.home .tabs_container .tab_setting_icon view {
  flex: 1;
}
.home .tabs_container .tab_setting_icon::after {
  content: "";
  position: absolute;
  left: 0;
  top: 12px;
  bottom: 12px;
  width: 1px;
  background-color: #ccc;
}
.home .tabs_container .scroll {
  flex: 1;
  overflow: hidden;
  box-sizing: border-box;
}
.home .tabs_container .scroll .list-scroll {
  height: 100%;
  display: flex;
  flex-direction: column;
}

