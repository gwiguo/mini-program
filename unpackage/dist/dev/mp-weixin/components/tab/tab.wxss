.tabs_container {
  display: flex;
  flex: 1;
  margin-bottom: 10px;
}
.tabs_container .tab_bar {
  overflow: hidden;
}
.tabs_container .tab_bar .van-tab {
  padding: 0 10px;
  flex-basis: auto !important;
}
.tabs_container .tab_setting_icon {
  flex: 1;
  padding: 0 10px;
  font-size: 24px;
}
.tabs_container .tab_setting_icon view {
  flex: 1;
}
.tabs_container .tab_setting_icon::after {
  content: "";
  position: absolute;
  left: 0;
  top: 12px;
  bottom: 12px;
  width: 1px;
  background-color: #ccc;
}
.tabs_container .scroll {
  flex: 1;
  overflow: hidden;
  box-sizing: border-box;
}
.tabs_container .scroll .list-scroll {
  height: 100%;
  display: flex;
  flex-direction: column;
}

